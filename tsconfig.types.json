{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "declaration": true,
      "declarationMap": true,
      "declarationDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "emitDeclarationOnly": true,
      "baseUrl": "./src",
    },
    "include": [
      "src/**/*.ts",
    ]
  }