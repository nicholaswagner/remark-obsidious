{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
    },
    "include": [
      "scripts/**/*.ts",
      "src/**/*.ts",
      "test/**/*",
    ],
    "exclude": [
      "node_modules",
      "dist",
    ]
  }